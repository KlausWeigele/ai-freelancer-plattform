# ====================================
# Environment Configuration
# ====================================

# Environment type: "development" | "staging" | "test" | "production"
# - staging/test: Shows test banner, noindex meta tags, robots.txt disallow
# - production: No test banner, allows indexing
NEXT_PUBLIC_ENVIRONMENT="development"

# ====================================
# Database
# ====================================

DATABASE_URL="postgresql://user:password@localhost:5432/freelancer_db?schema=public"

# ====================================
# NextAuth
# ====================================

NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"
JWT_SECRET="your-jwt-secret-here"

# Email (AWS SES - später)
EMAIL_FROM="noreply@ai-match.de"
AWS_SES_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# Sentry (Error Tracking - später)
SENTRY_DSN=""

# Feature Flags
NEXT_PUBLIC_ENABLE_MESSAGING="true"

# ====================================
# V1.0: AI Features (später)
# ====================================

# Anthropic API
ANTHROPIC_API_KEY="sk-ant-..."

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
